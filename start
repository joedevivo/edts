PROJDIR=${1:-"$HOME"}
EDTS_HOME="$(cd "$(dirname "$0")" >/dev/null && pwd -P)"

cd "$EDTS_HOME"
./_build/default/rel/edts/bin/edts \
	$3 \
	-edts project_data_dir "\"$PROJDIR\""
